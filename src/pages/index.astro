---
import Layout from "@/layouts/Layout.astro";

import policies from "@/constants/policies";
import { Image } from "astro:assets";
---

<Layout title='Privacy Policies & Terms'>
  <main class='px-4 sm:px-6 lg:px-8'>
    <div class='max-w-4xl mx-auto mt-12 mb-24'>
      <!-- Header -->
      <div class='text-center mb-16'>
        <h1
          class='text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl mb-4'
        >
          Privacy Policies & Terms
        </h1>
        <p class='text-lg text-gray-600'>
          Legal documents for Franklin Omar Gonzalez Flores' applications
        </p>
      </div>

      <!-- Privacy Policies Section -->
      <section class='mb-12'>
        <h2
          class='text-2xl font-semibold text-gray-900 mb-6 pb-2 border-b-2 border-gray-200'
        >
          Privacy Policies
        </h2>
        <div class='grid gap-4 md:grid-cols-2'>
          <!-- Domino Tracker -->
          {
            policies.map(({ description, image, link, name }, index) => (
              <a
                href={link}
                class='block p-6 bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow'
              >
                <div class='flex items-start'>
                  <div class='flex-shrink-0'>
                    <Image
                      loading={index < 2 ? "eager" : "lazy"}
                      src={image}
                      alt={`${name} Logo`}
                      class='w-12 h-12 rounded-lg'
                      width={48}
                      height={48}
                    />
                  </div>
                  <div class='ml-4'>
                    <h3 class='text-xl font-semibold text-gray-900 mb-2'>
                      {name}
                    </h3>
                    <p class='text-gray-700 text-sm'>{description}</p>
                  </div>
                </div>
              </a>
            ))
          }
          <!-- Placeholder for future policies -->
          <div
            class='block p-6 bg-gray-50 rounded-lg border border-gray-200 border-dashed opacity-60'
          >
            <div class='flex items-start'>
              <div class='flex-shrink-0'>
                <div class='w-12 h-12 bg-gray-200 rounded-lg'></div>
              </div>
              <div class='ml-4'>
                <h3 class='text-xl font-semibold text-gray-500 mb-2'>
                  More Coming Soon
                </h3>
                <p class='text-gray-500 text-sm'>
                  Additional privacy policies will be added here
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Contact Section -->
      <section class='mt-16 p-6 bg-blue-50 rounded-lg border border-blue-100'>
        <h2 class='text-xl font-semibold text-gray-900 mb-3'>
          Questions or Concerns?
        </h2>
        <p class='text-gray-700 mb-3'>
          If you have any questions about our privacy policies or terms of
          service, please don't hesitate to contact us.
        </p>
        <a
          href='mailto:dominosscore1@gmail.com'
          class='inline-flex items-center text-blue-600 font-medium hover:text-blue-800'
        >
          <svg
            class='w-5 h-5 mr-2'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
            ></path>
          </svg>
          dominosscore1@gmail.com
        </a>
      </section>

      <!-- Footer -->
      <footer
        class='mt-12 pt-6 border-t border-gray-200 text-center text-gray-500 text-sm'
      >
        <p>Last updated: October 2, 2025</p>
      </footer>
    </div>
  </main>
</Layout>
